@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<div class="text-black p-1 m-1">
    <h2>Role List</h2>
</div>
<div class="col-sm">
    <table class="table table-bordered table-striped table-sm p-1 m-1">
        <tr>
            <th>Role Name</th>
            <th>Users</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td identity-role="@item.Id"></td>
                <td>
                    <form asp-route-id="@item.Id" asp-action="Delete" method="post">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-yellow">Edit</a>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>  

