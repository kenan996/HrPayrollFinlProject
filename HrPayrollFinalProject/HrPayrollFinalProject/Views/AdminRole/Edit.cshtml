@model RoleModelDetails
@{
    ViewData["Title"] = "Edit";
}

<div class="text-black p-1 m-1">
    <h2>Role List</h2>
</div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<form asp-action="Edit" method="post">

    <input type="hidden" name="RoleId" value="@Model.Role.Id" />
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />

    <h6 class="bg-info text-white p-1">
        Add to @Model.Role.Name
    </h6>

    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr>
                <td colspan="2">All users are memebers</td>
            </tr>
        }
        else
        {
            foreach (var item in Model.NonMembers)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>
                        <input type="checkbox" name="IdToAdd" value="@item.Id" />
                    </td>
                </tr>
            }
        }
    </table>

    <h6 class="bg-info text-white p-1">
        Delete to @Model.Role.Name
    </h6>

    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr>
                <td colspan="2">No users are members</td>
            </tr>
        }
        else
        {
            foreach (var item in Model.Members)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>
                        <input type="checkbox" name="IdToDelete" value="@item.Id" />
                    </td>
                </tr>
            }
        }

    </table>
    <input type="submit" class="btn btn-yellow" value="Edit"/>
    <a asp-action="Index" class="btn btn-brown">Cancel</a>
</form>
