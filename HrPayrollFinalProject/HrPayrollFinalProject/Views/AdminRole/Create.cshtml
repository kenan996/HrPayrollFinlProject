@model string
@{
    ViewData["Title"] = "Create";
}

<div class=" text-black-50 p-1 m-1">
    <h2>Create Role</h2>
</div>
<div class="col-md-4">
    <form class="m-1 p-1" asp-action="Create" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label for="Name" class="control-label">Role Name</label>
            <input name="name" class="form-control" />
        </div>
      
        <input type="submit" class="btn btn-primary" value="Create" />
        <input type="submit" asp-action="Index" class="btn btn-secondary" value="Cancel" />
    </form>
</div>

