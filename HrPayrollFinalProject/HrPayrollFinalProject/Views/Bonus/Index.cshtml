@model IEnumerable<Bonus>
@{
    ViewData["Title"] = "Bonus Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <section class="hk-sec-wrapper">
            <h5 class="hk-sec-title">Export Table</h5>
            <div class="row">
                <div class="col-sm">
                    <div class="table-wrap">
                        <table id="datable_3" class="table table-hover w-100 display">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Amount</th>
                                    <th>Date</th>
                                    <th>Bonus</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Employees.Name</td>
                                    <td>@item.Employees.Surname</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Date</td>
                                    <td>
                                        <a asp-controller="Bonus" asp-action="AddBonus" asp-route-id="@item.Id" class="btn btn-yellow">Edit</a>
                                    </td>
                                    <td>
                                        <a asp-action="DeleteBonus" asp-controller="Bonus" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<!-- Row End -->
